{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@config": ["src/config.ts"],
      "@utils": ["src/utils.ts"],
      "@types": ["src/types.ts"],
      "@db/*": ["src/db/*"],
      "@api/*": ["src/api/*"],
      "@ergo/*":  ["src/ergo/*"],
      "*": [
        "node_modules/*"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/*",
    "src/**/*"
  ]
}